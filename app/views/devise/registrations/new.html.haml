.container-login100
  .wrap-login100
    %span.login100-form-title.mt-3
      Cadastro
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = render "devise/shared/error_messages", resource: resource
      .wrap-input100.mt-3
        .field.form-group
          = f.label :name, class: "label-input100"
          = f.text_field :name, class: "form-control"
        
        .field.form-group
          = f.label :numeroUSP, class: "label-input100"
          = f.text_field :numeroUSP, class: "form-control"
        
        .field.form-group
          = f.label :telephone, class: "label-input100"
          = f.text_field :telephone, class: "form-control"
        
        .field.form-group
          = f.label :email, class: "label-input100"
          = f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control"
        
        .field.form-group
          = f.label :password, class: "label-input100"
          - if @minimum_password_length
            %em
              (#{@minimum_password_length} characters minimum)
          = f.password_field :password, autocomplete: "new-password", class: "form-control"
        
        .field.form-group
          = f.label :password_confirmation, class: "label-input100"
          = f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control"
      .actions.wrap-input100.form-group.wrap-button_location.pt-1
        = f.submit "Cadastrar-se", class: "button btn btn-light special medium"
      .pt-3.pb-3
        = render "devise/shared/links"
      
      
      