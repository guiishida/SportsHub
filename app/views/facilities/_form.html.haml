= form_for @facility do |f|
  - if @facility.errors.any?
    #error_explanation
      %h2= "#{pluralize(@facility.errors.count, "error")} prohibited this facility from being saved:"
      %ul
        - @facility.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :mode
    = f.text_field :mode
  .field
    = f.label :sport
    = f.collection_select :sport_id, Sport.order(:name), :id, :name, include_blank: true
  .actions
    = f.submit 'Save'
