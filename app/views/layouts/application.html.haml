!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title SportsHub
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_pack_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    %nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
      %a.navbar-brand{:href => home_index_path}
        %img.d-inline-block.align-top{:alt => "", :height => "30", :src => "#", :width => "30"}/
        USPorts Hub
      %button.navbar-toggler{"aria-controls" => "navbarNavAltMarkup", "aria-expanded" => "false", "aria-label" => "Alterna navegação", "data-target" => "#navbarNavAltMarkup", "data-toggle" => "collapse", :type => "button"}
        %span.navbar-toggler-icon
      
      #navbarNav.collapse.navbar-collapse
        %ul.navbar-nav.mr-auto.my-1
          %li.nav-item.active
            %a.nav-link{:href => home_index_path}
              Home
              %span.sr-only (Página atual)
          %li.nav-item
            %a.nav-link{:href => page_path('cepe')} Informações CEPE
          %li.nav-item
            %a.nav-link{:href => page_path('booking')} Reservar uma Quadra
          %li.nav-item
            %a.nav-link{:href => '#'} Encontrar uma Partida
          %li.nav-item
            %a.nav-link{:href => page_path('contato')} Contato
          - if user_signed_in?
            -if current_user.email == "admin@sportshub.com.br"
              %li.nav-item
                %a.nav-link{:href => page_path('admin-space')} Espaço Admin

        %ul.navbar-nav.ml-auto.my-2
          - if user_signed_in?
            %li.nav-item.dropdown
              %a#navbarDropdownMenuLink-4.nav-link.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown"}
                %i.fas.fa-user
                Perfil
              .dropdown-menu.dropdown-menu-right.dropdown-info{"aria-labelledby" => "navbarDropdownMenuLink-4"}
                %a.dropdown-item{:href => edit_user_registration_path} 
                  %i.fas.fa-edit
                  Editar Minha Conta
                %a.dropdown-item{"data-method" => "delete", :href => destroy_user_session_path} 
                  %i.fas.fa-sign-out-alt
                  Sair    
          - else
            %li.nav-item.mr-3
              %a.btn.btn-light{:href => new_user_session_path, :role => "button"} Entrar
            %li.nav-item
              %a.btn.btn-light{:href => new_user_registration_path, :role => "button"} Cadastrar

    = yield
