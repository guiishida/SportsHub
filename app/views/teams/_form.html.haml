= form_for @team do |f|
  - if @team.errors.any?
    #error_explanation
      %h2= "#{pluralize(@team.errors.count, "error")} prohibited this team from being saved:"
      %ul
        - @team.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :teamname
    = f.text_field :teamname
  .field
    = f.label :date
    = f.text_field :date
  .field
    = f.label :schedulemin
    = f.text_field :schedulemin
  .field
    = f.label :schedulemax
    = f.text_field :schedulemax
  .field
    = f.label :sport
    = f.text_field :sport
  .field
    = f.label :people
    = f.text_field :people
  .actions
    = f.submit 'Save'
